{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Tourism Locations in Bali, Indonesia",
    "width": 500,
    "height": 400,
    "projection": {
      "type": "equirectangular"
    },
    "layer": [
      {
        "data": {
          "url": "https://wric0003.github.io/FIT3179/js/bali_island.json",
          "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries_idn"}
        },
        "mark": {"type": "geoshape", "fill": "gray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://wric0003.github.io/FIT3179/js/bali_tourism_extracted.csv" 
        },
        "mark": {"type": "circle", "size": 300, "color": "red", "opacity": 0.25},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "tooltip": [
            {"field": "Place", "type": "nominal", "title": "Place Name"},
            {"field": "Description", "type": "nominal", "title": "Description"}
          ]
        }
      }
    ]
  }
  