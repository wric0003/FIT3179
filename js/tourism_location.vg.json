{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Tourism Locations in Java, Indonesia",
  "projection": {
    "type": "equirectangular",
    "center": [110, -7],
    "scale": 4000 
  },
  "layer": [
    {
      "data": {
        "url": "https://wric0003.github.io/FIT3179/js/java_island.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries_idn"}
      },
      "mark": {"type": "geoshape", "fill": "gray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://wric0003.github.io/FIT3179/js/java_island.json",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://wric0003.github.io/FIT3179/js/tourism_with_id_translated.csv" 
      },
      "mark": {"type": "circle", "size": 5, "color": "red", "opacity": 0.5},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "tooltip": [{"field": "Place_Name", "type": "nominal", "title": "Place Name"}]
      }
    }
  ]
}
