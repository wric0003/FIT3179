{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Inbound Tourism Spending",
    "width": 500,
    "height": 400,
    "data": {
      "url": "https://wric0003.github.io/FIT3179/js/top5_sectors.csv"
    },
    "layer": [
      { "selection": {
        "sector_highlight": {
          "type": "multi",
          "fields": ["sector"],
          "bind": "legend"
         }
        },
        "mark": "area",
        "encoding": {
          "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          },
          "y": {
            "aggregate": "sum",
            "field": "revenue",
            "type": "quantitative",
            "title": "Revenue (in Billion Rupiah)",
            "stack": "normalize"
          },
          "color": {
            "field": "sector",
            "type": "nominal",
            "title": "Sector"
          },
          "tooltip": [
            {"field": "sector", "type": "nominal", "title": "Sector"},
            {"field": "revenue", "type": "quantitative", "title": "Revenue (in Billion Rupiah)", "format": ","}
          ],
          "opacity": {
            "condition": {"selection": "sector_highlight", "value": 1},
            "value": 0.3
          }
        }
      }
    ]
  }
  